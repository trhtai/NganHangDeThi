<Window x:Class="NganHangDeThi.ThemCauHoiTuFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NganHangDeThi" 
        xmlns:local1="clr-namespace:NganHangDeThi.Converters"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="ThemCauHoiTuFileWindow" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Resources>
        <local1:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        <local1:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
        <local1:IndexConverter x:Key="IndexConverter" />
    </Window.Resources>

    <Border Name="MainBorder" Background="{StaticResource BgColor}" MouseDown="MainBorder_MouseDown" MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Title-->
            <TextBlock Text="Thêm câu hỏi từ file" Grid.Row="0" 
            FontSize="32" FontWeight="SemiBold" Margin="18 0 0 4"
            HorizontalAlignment="Left" Foreground="#121518"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <TextBlock Text="Chọn môn học" FontFamily="13" FontWeight="SemiBold" Margin="18 0 10 0"
                    Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center" />

                    <ComboBox Width="400" Style="{StaticResource ComboBoxFlatStyle}"
                      ItemsSource="{Binding DsMonHoc}"
                      SelectedItem="{Binding MonHocDangChon, Mode=TwoWay}"
                      DisplayMemberPath="TenMon"
                      Margin="0 0 10 0"/>

                    <TextBlock Text="Chọn chương" FontFamily="13" FontWeight="SemiBold" Margin="18 0 10 0"
                        Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center" />

                    <ComboBox Width="400" Style="{StaticResource ComboBoxFlatStyle}"
                      ItemsSource="{Binding DsChuongTheoMonHoc}"
                      SelectedItem="{Binding ChuongDangChon, Mode=TwoWay}"
                      >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Margin="0" Padding="0">
                                    <TextBlock.Inlines>
                                        <Run Text="{Binding ViTri, StringFormat=Chương {0}: }"/>
                                        <Run Text="{Binding TenChuong}"/>
                                    </TextBlock.Inlines>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0">
                    <!--Import File Button-->
                    <Button Name="BtnImportFile" Click="BtnImportFile_Click" Width="140" Style="{StaticResource AddButton}" Margin="0 0 20 0">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="File" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                            <TextBlock Text="Import file" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--Preview Questions-->
                <DataGrid Grid.Row="1" ItemsSource="{Binding DsCauHoiRaw}" CanUserSortColumns="False"
                  RowStyle="{DynamicResource DataGridRowStyle1}" 
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                  Style="{DynamicResource DataGridStyle1}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nội dung" Binding="{Binding NoiDung}" IsReadOnly="True" Width="auto" />
                        <DataGridTextColumn Header="Mức độ" Binding="{Binding MucDo, Converter={StaticResource EnumDescriptionConverter}}" IsReadOnly="True" Width="auto" />
                        <DataGridTextColumn Header="Loại" Binding="{Binding Loai, Converter={StaticResource EnumDescriptionConverter}}" IsReadOnly="True" Width="auto" />
                        <DataGridTemplateColumn Header="Đáp án" Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding DapAn}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                <Run Text="• "/>
                                                <Run Text="{Binding NoiDung}" FontWeight="{Binding LaDapAnDung, Converter={StaticResource BoolToFontWeightConverter}}"/>
                                                <Run Text=" "/>
                                                <Run Text="(Vị trí:" Foreground="Gray"/>
                                                <Run Text="{Binding ViTriGoc}" Foreground="Gray"/>
                                                <Run Text=", Đảo vị trí:" Foreground="Gray"/>
                                                <Run Text="{Binding DaoViTri}" Foreground="Gray"/>
                                                <Run Text=")" Foreground="Gray"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <Border Grid.Row="2" Height="60" Background="#f6f6f6" Margin="0 10 0 0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                        <Button Grid.Row="0" Content="Hủy" HorizontalAlignment="Left" Margin="20 0 10 0" Style="{StaticResource BackButton}" Width="150" Name="BtnCancel" Click="BtnCancel_Click"/>

                        <Button Grid.Column="1" Name="BtnSave" Click="BtnSave_Click" Content="Lưu" HorizontalAlignment="Right" Margin="0 0 20 0" Style="{StaticResource SaveButton}">
                            <Button.Effect>
                                <DropShadowEffect Direction="-120" BlurRadius="10" Opacity="0.3" ShadowDepth="5" Color="#4880FF"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
