<Window x:Class="NganHangDeThi.ThemCauHoiTuFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NganHangDeThi" 
        xmlns:local1="clr-namespace:NganHangDeThi.Converters"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="ThemCauHoiTuFileWindow" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Resources>
        <local1:HtmlDisplayConverter x:Key="HtmlDisplayConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local1:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        <local1:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
        <local1:IndexConverter x:Key="IndexConverter" />
    </Window.Resources>

    <Border Name="MainBorder" Background="{StaticResource BgColor}" MouseDown="MainBorder_MouseDown" MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Title-->
            <TextBlock Text="Thêm câu hỏi từ file" Grid.Row="0" 
            FontSize="32" FontWeight="SemiBold" Margin="18 0 0 4"
            HorizontalAlignment="Left" Foreground="#121518"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <TextBlock Text="Chọn môn học" FontFamily="13" FontWeight="SemiBold" Margin="18 0 10 0"
                    Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center" />

                    <ComboBox Width="400" Style="{StaticResource ComboBoxFlatStyle}"
                      ItemsSource="{Binding DsMonHoc}"
                      SelectedItem="{Binding MonHocDangChon, Mode=TwoWay}"
                      DisplayMemberPath="TenMon"
                      Margin="0 0 10 0"/>

                    <TextBlock Text="Chọn chương" FontFamily="13" FontWeight="SemiBold" Margin="18 0 10 0"
                        Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center" />

                    <ComboBox Width="400" Style="{StaticResource ComboBoxFlatStyle}"
                      ItemsSource="{Binding DsChuongTheoMonHoc}"
                      SelectedItem="{Binding ChuongDangChon, Mode=TwoWay}"
                      >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Margin="0" Padding="0">
                                    <TextBlock.Inlines>
                                        <Run Text="{Binding ViTri, StringFormat=Chương {0}: }"/>
                                        <Run Text="{Binding TenChuong}"/>
                                    </TextBlock.Inlines>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0">
                    <!--Import File Button-->
                    <Button Name="BtnImportFile" Click="BtnImportFile_Click" Width="140" Style="{StaticResource AddButton}" Margin="0 0 20 0">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="File" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                            <TextBlock Text="Import file" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--Preview Questions-->
                <DataGrid Grid.Row="1" ItemsSource="{Binding DsCauHoiRaw}" CanUserSortColumns="False"
                          RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          RowDetailsVisibilityMode="VisibleWhenSelected">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nội dung / Giả thuyết chung" 
                                            Binding="{Binding NoiDung, Converter={StaticResource HtmlDisplayConverter}}" 
                                            IsReadOnly="True" Width="*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="MaxHeight" Value="80"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Mức độ" Binding="{Binding MucDo, Converter={StaticResource EnumDescriptionConverter}}" IsReadOnly="True" Width="auto" />
                        <DataGridTextColumn Header="Loại" Binding="{Binding Loai, Converter={StaticResource EnumDescriptionConverter}}" IsReadOnly="True" Width="auto" />

                        <DataGridTemplateColumn Header="Đáp án (Câu đơn)" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding DapAn}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Margin="0,2">
                                    <Run Text="• "/>
                                    <Run Text="{Binding NoiDung, Converter={StaticResource HtmlDisplayConverter}}" FontWeight="{Binding LaDapAnDung, Converter={StaticResource BoolToFontWeightConverter}}" 
                                         Foreground="{Binding LaDapAnDung, Converter={StaticResource BoolToFontWeightConverter}, ConverterParameter=Red}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border Background="#F9F9F9" BorderBrush="#DDDDDD" BorderThickness="1" Margin="10,5" Padding="10"
                    Visibility="{Binding LaCauChum, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <TextBlock Text="DANH SÁCH CÂU HỎI CON:" FontWeight="Bold" Foreground="#4880FF" Margin="0,0,0,5"/>

                                    <DataGrid ItemsSource="{Binding CauHoiCon}" AutoGenerateColumns="False" CanUserAddRows="False" 
                              BorderThickness="0" Background="Transparent" HeadersVisibility="Column">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Câu hỏi con" 
                                                Binding="{Binding NoiDung, Converter={StaticResource HtmlDisplayConverter}}" 
                                                Width="*" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Mức độ" Binding="{Binding MucDo}" Width="Auto" IsReadOnly="True"/>

                                            <DataGridTemplateColumn Header="Đáp án" Width="Auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ItemsControl ItemsSource="{Binding DapAn}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock>
                                                                        <Run Text="• "/>
                                                                        <Run Text="{Binding NoiDung}" FontWeight="{Binding LaDapAnDung, Converter={StaticResource BoolToFontWeightConverter}}"/>
                                                                    </TextBlock>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>

                <Border Grid.Row="2" Height="60" Background="#f6f6f6" Margin="0 10 0 0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                        <Button Grid.Row="0" Content="Hủy" HorizontalAlignment="Left" Margin="20 0 10 0" Style="{StaticResource BackButton}" Width="150" Name="BtnCancel" Click="BtnCancel_Click"/>

                        <Button Grid.Column="1" Name="BtnSave" Click="BtnSave_Click" Content="Lưu" HorizontalAlignment="Right" Margin="0 0 20 0" Style="{StaticResource SaveButton}">
                            <Button.Effect>
                                <DropShadowEffect Direction="-120" BlurRadius="10" Opacity="0.3" ShadowDepth="5" Color="#4880FF"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
