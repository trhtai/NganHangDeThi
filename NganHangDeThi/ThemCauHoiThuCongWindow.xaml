<Window x:Class="NganHangDeThi.ThemCauHoiThuCongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Thêm câu hỏi thủ công" Height="900" Width="1200"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgColor}" CornerRadius="10" BorderBrush="#dcdcdc" BorderThickness="1"
            MouseDown="Border_MouseDown">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Thêm câu hỏi thủ công" FontSize="24" FontWeight="SemiBold" 
                       Foreground="#121518" Margin="0 0 0 15"/>

            <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0 0 0 10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Định dạng:" VerticalAlignment="Center" Margin="5,0,10,0" FontWeight="SemiBold" Foreground="#666"/>

                    <Button Command="EditingCommands.ToggleBold" ToolTip="In đậm (Ctrl+B)" Style="{StaticResource ToolbarButton}">
                        <TextBlock Text="B" FontWeight="Bold"/>
                    </Button>
                    <Button Command="EditingCommands.ToggleItalic" ToolTip="In nghiêng (Ctrl+I)" Style="{StaticResource ToolbarButton}">
                        <TextBlock Text="I" FontStyle="Italic" FontWeight="Bold" FontFamily="Serif"/>
                    </Button>
                    <Button Command="EditingCommands.ToggleUnderline" ToolTip="Gạch chân (Ctrl+U)" Style="{StaticResource ToolbarButton}">
                        <TextBlock Text="U" TextDecorations="Underline" FontWeight="Bold"/>
                    </Button>
                    <Rectangle Width="1" Height="20" Fill="#CCC" Margin="5,0"/>

                    <Button Command="EditingCommands.ToggleSubscript" ToolTip="Chỉ số dưới" Style="{StaticResource ToolbarButton}">
                        <TextBlock Text="X₂"/>
                    </Button>
                    <Button Command="EditingCommands.ToggleSuperscript" ToolTip="Chỉ số trên" Style="{StaticResource ToolbarButton}">
                        <TextBlock Text="X²"/>
                    </Button>

                    <Rectangle Width="1" Height="20" Fill="#CCC" Margin="5,0"/>

                    <Button Click="BtnToDo_Click" ToolTip="Tô đỏ văn bản" Style="{StaticResource ToolbarButton}">
                        <Icon:PackIconMaterial Kind="FormatColorText" Foreground="Red" />
                    </Button>
                    <Button Click="BtnXoaMau_Click" ToolTip="Xóa màu (Về đen)" Style="{StaticResource ToolbarButton}">
                        <Icon:PackIconMaterial Kind="FormatColorText" Foreground="Black" />
                    </Button>

                    <TextBlock Text="(Chọn văn bản rồi nhấn nút)" VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic" Foreground="#999" FontSize="11"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="2" Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0 0 10 0">
                    <TextBlock Text="Môn học" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <ComboBox x:Name="CbbMonHoc" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                              DisplayMemberPath="TenMon" SelectionChanged="CbbMonHoc_SelectionChanged"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10 0 0 0">
                    <TextBlock Text="Chương" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <ComboBox x:Name="CbbChuong" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                              DisplayMemberPath="TenChuong"/>
                </StackPanel>
            </Grid>

            <TabControl Name="TabControl" Grid.Row="3" Style="{StaticResource TabControlStyle}">
                <TabItem Header="Câu hỏi đơn" Style="{StaticResource TabItemStyle}">
                    <Grid Margin="0 10 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="0 0 10 0">
                                <TextBlock Text="Mức độ" Foreground="#888" Margin="0 0 0 5"/>
                                <ComboBox x:Name="CbbMucDoDon" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10 0 0 0">
                                <TextBlock Text="Loại câu hỏi" Foreground="#888" Margin="0 0 0 5"/>
                                <ComboBox x:Name="CbbLoaiDon" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="1" Margin="0 0 0 15">
                            <TextBlock Text="Nội dung câu hỏi" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Border BorderThickness="1" BorderBrush="#E1E6EB" CornerRadius="5" Background="White" Height="100">
                                <RichTextBox x:Name="RtbNoiDungDon" Padding="10" BorderThickness="0" Background="Transparent"
                                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto">
                                    <FlowDocument>
                                        <Paragraph>
                                            <Run Text=""/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </Border>
                        </StackPanel>

                        <GroupBox Grid.Row="2" Header="Danh sách đáp án" BorderBrush="#E0E0E0" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                                    <ItemsControl x:Name="IcDapAnDon" ItemsSource="{Binding DsDapAnViewModel}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox IsChecked="{Binding LaDapAnDung}" ToolTip="Là đáp án đúng" VerticalAlignment="Top" Margin="0,8,10,0"/>

                                                    <Border Grid.Column="1" BorderThickness="1" BorderBrush="#E1E6EB" CornerRadius="5" Background="White" MinHeight="40">
                                                        <RichTextBox Padding="5" BorderThickness="0" Background="Transparent" Loaded="RichTextBox_Loaded">
                                                        </RichTextBox>
                                                    </Border>

                                                    <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top" Margin="10,8,0,0">
                                                        <CheckBox IsChecked="{Binding DaoViTri}" Content="Trộn" FontSize="11"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="3" Style="{StaticResource GridRemoveButton}" 
                                                            Click="BtnXoaDapAn_Click" VerticalAlignment="Top" Margin="10,5,0,0"
                                                            Tag="{Binding}">
                                                        <Icon:PackIconMaterial Kind="Close" Width="10" Height="10"/>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <Button Grid.Row="1" Content="Thêm đáp án" HorizontalAlignment="Left" Margin="0 10 0 0"
                                        Style="{StaticResource AddButton}" Width="120" Click="BtnThemDapAn_Click"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <TabItem Header="Câu chùm (Tạm ẩn)" Visibility="Collapsed"/>
            </TabControl>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Hủy" Style="{StaticResource BackButton}" Margin="0 0 15 0" Click="BtnHuy_Click"/>
                <Button Content="Lưu câu hỏi" Style="{StaticResource SaveButton}" Click="BtnLuu_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>