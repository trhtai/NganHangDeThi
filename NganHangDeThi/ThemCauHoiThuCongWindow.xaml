<Window x:Class="NganHangDeThi.ThemCauHoiThuCongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NganHangDeThi"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:uc="clr-namespace:NganHangDeThi.MyUserControl"
        mc:Ignorable="d"
        Title="Thêm câu hỏi thủ công" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="multiLineTextBox" TargetType="TextBox" BasedOn="{StaticResource myTextBox}">
            <Setter Property="Height" Value="80"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgColor}" CornerRadius="10" BorderBrush="#dcdcdc" BorderThickness="1"
            MouseDown="Border_MouseDown">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Thêm câu hỏi thủ công" FontSize="28" FontWeight="SemiBold" 
                       Foreground="#121518" Margin="0 0 0 15"/>

            <Grid Grid.Row="1" Margin="0 0 0 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0 0 10 0">
                    <TextBlock Text="Môn học" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <ComboBox x:Name="CbbMonHoc" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                              DisplayMemberPath="TenMon" SelectionChanged="CbbMonHoc_SelectionChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10 0 0 0">
                    <TextBlock Text="Chương" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <ComboBox x:Name="CbbChuong" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                              DisplayMemberPath="TenChuong"/>
                </StackPanel>
            </Grid>

            <TabControl Name="TabControl" Grid.Row="2" Style="{StaticResource TabControlStyle}">

                <TabItem Header="Câu hỏi đơn" Style="{StaticResource TabItemStyle}">
                    <Grid Margin="0 10 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="0 0 10 0">
                                <TextBlock Text="Mức độ" Foreground="#888" Margin="0 0 0 5"/>
                                <ComboBox x:Name="CbbMucDoDon" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10 0 0 0">
                                <TextBlock Text="Loại câu hỏi" Foreground="#888" Margin="0 0 0 5"/>
                                <ComboBox x:Name="CbbLoaiDon" Style="{StaticResource ComboBoxFlatStyle}" Height="35"
                                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="1" Margin="0 0 0 15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Nội dung câu hỏi" FontWeight="SemiBold"/>
                                <Button Grid.Column="1" Style="{StaticResource AddButton}" Width="90" Height="25"
                                        Content="Chèn ảnh" Click="BtnChonAnhCauHoi_Click"/>
                            </Grid>
                            <TextBox x:Name="TxtNoiDungDon" Style="{StaticResource multiLineTextBox}" Margin="0 5 0 0"/>
                            <Image x:Name="ImgCauHoiDon" Height="100" HorizontalAlignment="Left" Margin="0 5 0 0" Visibility="Collapsed" Stretch="Uniform"/>
                        </StackPanel>

                        <GroupBox Grid.Row="2" Header="Danh sách đáp án" BorderBrush="#E0E0E0" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="DgDapAn" AutoGenerateColumns="False" CanUserAddRows="False"
                                          Style="{StaticResource DataGridStyle1}"
                                          RowStyle="{StaticResource DataGridRowStyle1}"
                                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                                          CellStyle="{StaticResource DataGridCellStyle1}">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="Đúng" Binding="{Binding LaDapAnDung}" Width="50"/>
                                        <DataGridTextColumn Header="Nội dung đáp án" Binding="{Binding NoiDung}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Trộn" Binding="{Binding DaoViTri}" Width="50"/>
                                        <DataGridTemplateColumn Header="Ảnh" Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding HinhAnh}" Height="30" Stretch="Uniform"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Xóa" Width="50">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Style="{StaticResource GridRemoveButton}" Click="BtnXoaDapAn_Click">
                                                        <Icon:PackIconMaterial Kind="Close" Width="10" Height="10"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Button Grid.Row="1" Content="Thêm đáp án" HorizontalAlignment="Left" Margin="0 10 0 0"
                                        Style="{StaticResource AddButton}" Width="120" Click="BtnThemDapAn_Click"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <TabItem Header="Câu chùm (Bài đọc hiểu)" Style="{StaticResource TabItemStyle}">
                    <Grid Margin="0 10 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0 0 0 15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Nội dung đoạn văn / giả thiết chung" FontWeight="SemiBold"/>
                                <Button Grid.Column="1" Style="{StaticResource AddButton}" Width="90" Height="25"
                                        Content="Chèn ảnh" Click="BtnChonAnhChum_Click"/>
                            </Grid>
                            <TextBox x:Name="TxtNoiDungChum" Style="{StaticResource multiLineTextBox}" Height="100" Margin="0 5 0 0"/>
                            <Image x:Name="ImgCauHoiChum" Height="100" HorizontalAlignment="Left" Margin="0 5 0 0" Visibility="Collapsed" Stretch="Uniform"/>
                        </StackPanel>

                        <GroupBox Grid.Row="1" Header="Danh sách câu hỏi con" BorderBrush="#E0E0E0" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="DgCauHoiCon" AutoGenerateColumns="False" CanUserAddRows="False"
                                          Style="{StaticResource DataGridStyle1}"
                                          RowStyle="{StaticResource DataGridRowStyle1}"
                                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                                          CellStyle="{StaticResource DataGridCellStyle1}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Nội dung" Binding="{Binding NoiDung}" Width="*"/>
                                        <DataGridTextColumn Header="Mức độ" Binding="{Binding MucDo}" Width="100"/>
                                        <DataGridTextColumn Header="Số đáp án" Binding="{Binding DapAn.Count}" Width="80"/>
                                        <DataGridTemplateColumn Header="Thao tác" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Style="{StaticResource GridRemoveButton}" Click="BtnXoaCauHoiCon_Click">
                                                        <Icon:PackIconMaterial Kind="Close" Width="10" Height="10"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Button Grid.Row="1" Content="Thêm câu hỏi con" HorizontalAlignment="Left" Margin="0 10 0 0"
                                        Style="{StaticResource AddButton}" Width="150" Click="BtnThemCauCon_Click"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Hủy" Style="{StaticResource BackButton}" Margin="0 0 15 0" Click="BtnHuy_Click"/>
                <Button Content="Lưu câu hỏi" Style="{StaticResource SaveButton}" Click="BtnLuu_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>