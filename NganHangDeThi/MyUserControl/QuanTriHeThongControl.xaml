<UserControl x:Class="NganHangDeThi.MyUserControl.QuanTriHeThongControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NganHangDeThi.MyUserControl" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:local1="clr-namespace:NganHangDeThi.Converters"
             d:DataContext="{d:DesignInstance Type=local:QuanTriHeThongControl}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local1:TrangThaiLopHocConverter x:Key="TrangThaiConverter" />
        <local1:IndexConverter x:Key="IndexConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock Text="Quản trị hệ thống" Grid.Row="0" 
                   FontSize="32" FontWeight="SemiBold" Margin="0 0 0 4"
                   HorizontalAlignment="Left" Foreground="#121518"/>

        <!--Tab control-->
        <TabControl Grid.Row="1" Style="{StaticResource TabControlStyle}" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="TabLopHoc" Header="Lớp học" Style="{StaticResource TabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <!--Filter Title-->
                        <TextBlock Text="Tìm kiếm" FontFamily="13" FontWeight="SemiBold" Margin="0 0 10 0"
                                    Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center" />

                        <!--Filter Box-->
                        <Grid Width="200">
                            <TextBox x:Name="TxtFilterBox" 
                                     Tag="Nhập tên môn học..."
                                     Text="{Binding TuKhoaTimKiemLopHoc, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxFilter}" />
                        </Grid>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0">
                        <!--Refresh Button-->
                        <Button Name="BtnTaiLaiLopHoc" Click="BtnTaiLaiLopHoc_Click" Style="{StaticResource AddButton}" Margin="0 0 4 0">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Refresh" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                                <TextBlock Text="Tải lại" />
                            </StackPanel>
                        </Button>
                        
                        <!--Add Button-->
                        <Button Name="BtnThemLopHoc" Click="BtnThemLopHoc_Click" Style="{StaticResource AddButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                                <TextBlock Text="Thêm" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding LopHocView}"
                              RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                              CellStyle="{DynamicResource DataGridCellStyle1}" 
                              Style="{DynamicResource DataGridStyle1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" Visibility="Collapsed" IsReadOnly="True" CanUserResize="False" Width="auto" />
                            <DataGridTextColumn Header="Mã lớp" Binding="{Binding MaLop}" IsReadOnly="True" Width="auto" />
                            <DataGridTextColumn Header="Bắt đầu" Binding="{Binding NgayBatDau}" IsReadOnly="True" Width="auto" />
                            <DataGridTextColumn Header="Kết thúc" Binding="{Binding NgayKetThuc}" IsReadOnly="True" Width="auto" />
                            <DataGridTextColumn Header="Trạng thái" IsReadOnly="True" Width="auto">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="TrangThai" Converter="{StaticResource TrangThaiConverter}" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Năm học" Binding="{Binding NamHoc}" IsReadOnly="True" Width="auto" />
                            <DataGridTextColumn Header="GVCN" Binding="{Binding GVCN}" IsReadOnly="True" Width="auto" />

                            <DataGridTemplateColumn Header="Thao tác" IsReadOnly="True" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Name="BtnQuanLyMonHoc" Click="BtnQuanLyMonHoc_Click" Style="{StaticResource GridEditButton}" Tag="{Binding}" ToolTip="Quản lý môn học">
                                                <Icon:PackIconMaterial Kind="BookOpenVariant" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                            <Button Name="BtnSuaLopHoc" Click="BtnSuaLopHoc_Click" Style="{StaticResource GridEditButton}" Tag="{Binding}" ToolTip="Sửa" Margin="5 0 0 0">
                                                <Icon:PackIconMaterial Kind="PencilOffOutline" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                            <Button Name="BtnXoaLopHoc" Click="BtnXoaLopHoc_Click" Style="{StaticResource GridRemoveButton}" Tag="{Binding}" ToolTip="Xóa" Margin="5 0 0 0">
                                                <Icon:PackIconMaterial Kind="DeleteOffOutline" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem x:Name="TabMonHoc" Header="Môn học" Style="{StaticResource TabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <!--Filter Title-->
                        <TextBlock Text="Tìm kiếm" FontFamily="13" FontWeight="SemiBold" Margin="0 0 10 0"
                        Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center" />

                        <!--Filter Box-->
                        <Grid Width="200">
                            <TextBox x:Name="TxtMonHocFilterBox" 
                                     Tag="Nhập mã lớp hoặc tên GV..."
                                 Text="{Binding TuKhoaTimKiemMonHoc, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxFilter}" />
                        </Grid>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0">
                        <!--Refresh Button-->
                        <Button Name="BtnTaiLaiMonHoc" Click="BtnTaiLaiMonHoc_Click" Style="{StaticResource AddButton}" Margin="0 0 4 0">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Refresh" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                                <TextBlock Text="Tải lại" />
                            </StackPanel>
                        </Button>

                        <!--Add Button-->
                        <Button Name="BtnThemMonHoc" Click="BtnThemMonHoc_Click" Style="{StaticResource AddButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                                <TextBlock Text="Thêm" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding MonHocView}"
                          RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" Visibility="Collapsed" IsReadOnly="True" CanUserResize="False" Width="auto" />
                            <DataGridTextColumn Header="Tên môn" Binding="{Binding TenMon}" IsReadOnly="True" Width="auto" />

                            <DataGridTemplateColumn Header="Thao tác" IsReadOnly="True" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Name="BtnQuanLyChuong" Click="BtnQuanLyChuong_Click" Style="{StaticResource GridEditButton}" Tag="{Binding}" ToolTip="Quản lý chương">
                                                <Icon:PackIconMaterial Kind="BookOpenVariant" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                            <Button Name="BtnSuaMonHoc" Click="BtnSuaMonHoc_Click" Style="{StaticResource GridEditButton}" Tag="{Binding}" ToolTip="Sửa" Margin="5 0 0 0">
                                                <Icon:PackIconMaterial Kind="PencilOffOutline" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                            <Button Name="BtnXoaMonHoc" Click="BtnXoaMonHoc_Click" Style="{StaticResource GridRemoveButton}" Tag="{Binding}" ToolTip="Xóa" Margin="5 0 0 0">
                                                <Icon:PackIconMaterial Kind="DeleteOffOutline" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem x:Name="TabKhoa" Header="Khoa" Style="{StaticResource TabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0">
                        <Button Name="BtnTaiLaiKhoa" Click="BtnTaiLaiKhoa_Click" Style="{StaticResource AddButton}" Margin="0 0 4 0">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Refresh" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                                <TextBlock Text="Tải lại" />
                            </StackPanel>
                        </Button>

                        <Button Name="BtnThemKhoa" Click="BtnThemKhoa_Click" Style="{StaticResource AddButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                                <TextBlock Text="Thêm" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding KhoaView}"
                              Grid.Row="1"
                              RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                              CellStyle="{DynamicResource DataGridCellStyle1}" 
                              Style="{DynamicResource DataGridStyle1}" 
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" Visibility="Collapsed" IsReadOnly="True" />
                            <DataGridTextColumn Header="Mã khoa" Binding="{Binding MaKhoa}" IsReadOnly="True" Width="150" />
                            <DataGridTextColumn Header="Tên khoa" Binding="{Binding TenKhoa}" IsReadOnly="True" Width="*" />

                            <DataGridTemplateColumn Header="Thao tác" IsReadOnly="True" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Name="BtnSuaKhoa" Click="BtnSuaKhoa_Click" Style="{StaticResource GridEditButton}" Tag="{Binding}" ToolTip="Sửa">
                                                <Icon:PackIconMaterial Kind="PencilOffOutline" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                            <Button Name="BtnXoaKhoa" Click="BtnXoaKhoa_Click" Style="{StaticResource GridRemoveButton}" Tag="{Binding}" ToolTip="Xóa" Margin="5 0 0 0">
                                                <Icon:PackIconMaterial Kind="DeleteOffOutline" Style="{StaticResource GridButtonIcon}" />
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
